= haml :"#{ENV['RA']}/header", locals: { params: {} }

.container-fluid
  - unless flash[:error].nil?
    .alert.alert-error
      = flash[:error]

  .centered
    - if ENV['CDN_HOST']
      %img{class: 'img-big', src: "//#{ENV['CDN_HOST']}/images/logo-big.png"}
    - else
      %img{class: 'img-big', src: "/images/#{ENV['RA']}/logo-big.png"}

  .row
    .col-md-6.col-md-offset-3
      = haml :'works/search'

    .splash

= haml :"#{ENV['RA']}/footer"
