.row.footer
  .container-fluid
    .col-sm-3
      %h4
        About DataCite
      %ul
        - settings.about_links.each do |item|
          %li
            %a{:href => "#{ENV["HOMEPAGE_URL"]}#{item['url']}"}
              = item['name']
    .col-sm-3
      %h4
        Services
      %ul
        - settings.services_links.each do |item|
          %li
            %a{:href => "#{ENV["HOMEPAGE_URL"]}#{item['url']}"}
              = item['name']
    .col-sm-3
      %h4
        Resources
      %ul
        - settings.resources_links.each do |item|
          %li
            %a{:href => item['url']}
              = item['name']
      %h4
        Community
      %ul
        - settings.community_links.each do |item|
          %li
            %a{:href => "#{ENV["HOMEPAGE_URL"]}#{item['url']}"}
              = item['name']

    .col-sm-3
      %h4.share Contact us
      %a{href: "mailto:support@datacite.org", class: "share"}
        %i.fas.fa-envelope
      %a{href: "https://blog.datacite.org", class: "share"}
        %i.fas.fa-blog
      %a{href: "https://twitter.com/datacite", class: "share"}
        %i.fab.fa-twitter
      %a{href: "https://github.com/datacite/datacite", class: "share"}
        %i.fab.fa-github
      %a{href: "https://www.youtube.com/channel/UCVsSDZhIN_WbnD_v5o9eB_A", class: "share"}
        %i.fab.fa-youtube
      %a{href: "https://www.linkedin.com/company/datacite", class: "share"}
        %i.fab.fa-linkedin
        
      %ul.share
        - settings.contact_links.each do |item|
          %li
            %a{:href => "#{ENV["HOMEPAGE_URL"]}#{item['url']}"}
              = item['name']
      %a{href: "http://status.datacite.org", target: "_blank"}
        %span.color-dot
        %span.color-description
