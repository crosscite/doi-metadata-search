%div.item-data
  %h3
    - unless item.title.nil?
      = item.title
    - else
      [no metadata registered]

    %p.extra
      %span
        - if item.version
          = "Version " + item.version + ". "
        - unless (item.year.nil? || item.year.to_i == 0)
          Published
        %b
          - unless item.day.nil?
            = item.day
          - unless item.month.nil?
            = item.month
          - unless (item.year.nil? || item.year.to_i == 0)
            = item.year
      - unless item.publication.nil?
        %span
          via
          %b= item.publication

  - unless item.authors.nil?
    %p.expand= item.authors[0..19].join(", ")

  - if item.creative_commons
    %p
      - if item.creative_commons == "zero"
        %a{:href => "http://creativecommons.org/publicdomain/zero/1.0/"}
          %img{:src => "http://i.creativecommons.org/p/zero/1.0/80x15.png"}
      - else
        %a{:href => "http://creativecommons.org/licenses/#{item.creative_commons}/4.0/"}
          %img{:src => "http://i.creativecommons.org/l/#{item.creative_commons}/4.0/80x15.png"}

  = partial :item_links, :item => item

