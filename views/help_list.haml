:javascript
  $(document).ready(function() {
    $('.example-link').click(function(e) {
      var $searchInput = $('.search-input');
      $searchInput.val($(this).text());
      $searchInput.focus();
      $('html, body').animate({scrollTop:0});
    });
  });

