.search-wide
  %form.form-horizontal{:method => 'GET', :action => '/members'}
    .input-group
      - if params[:member_type].present?
        %input{type: "hidden", name: "member_type", value: params[:member_type]}
      - if params[:region].present?
        %input{type: "hidden", name: "region", value: params[:region]}
      - if params[:year].present?
        %input{type: "hidden", name: "year", value: params[:year]}
      %input.form-control{type: "text", name: 'query', id: 'query', value: params[:query], placeholder: "Search for member"}
      .input-group-btn
        %button.btn.btn-primary{type: "submit"}
          Search
