= haml :"#{ENV['RA']}/header", locals: { page: {} }

.container-fluid
  .row
    .col-md-9#content-work
      - if @member.present?
        = haml :'members/item', locals: { item: @member }
      - elsif @member_error.present?
        %div.alert.alert-warning
          = @member_error

    - if @member.present? && @member.fetch("attributes", {}).fetch("member-type", nil) == "allocating"
      .col-md-9
        = haml :'works/search'

      .col-md-9#content-works
        = haml :'works/list'

      .col-md-3
        = haml :'works/facets'

= haml :"#{ENV['RA']}/footer"
