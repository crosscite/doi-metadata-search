%tr
  %td.item-data
    - unless item.title.nil?
      %p.lead  
        - if item.open_access?
          %a.oa-tooltip{:href => "http://www.doaj.org/doaj?func=findJournals&uiLanguage=en&hybrid=&query=#{item.coins_title}", :target => '_blank'}
            %span.small{:style => 'font-size: 0.8em;'} DOAJ
        = item.title
        
      %p.extra
        %span
          Published
          %b
            - unless item.day.nil?
              = item.day
            - unless item.month.nil?
              = item.month
            - unless item.year.nil?
              = item.year              
        - unless item.publication.nil?
          %span
            in
            %b= item.publication
        - unless item.volume.nil?
          %span
            , volume
            %b= item.volume
        - unless item.issue.nil?
          %span
            , issue
            %b= item.issue
        - if !item.first_page.nil? && !item.last_page.nil?
          %span
            , on pages
            %b= item.first_page
            to
            %b= item.last_page
        - elsif !item.first_page.nil?
          %span
            , on page
            %b= item.first_page
  
    - unless item.authors.nil?
      %p.expand= item.authors

    = partial :item_links, :item => item