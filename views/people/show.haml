= haml :"#{ENV['RA']}/header", locals: { page: {} }

.container-fluid
  .content
    .row
      .col-md-9#content-contributor
        - if @person[:errors].present?
          %div.alert.alert-warning
            = @person[:errors].first.fetch("title", "")
        - elsif @person[:data].present?
          = haml :'people/item', locals: { item: @person[:data] }

      .col-md-9
        = haml :'works/search'

      .col-md-9.panel-list#content-works
        = haml :'works/list'

      .col-md-3
        = haml :'works/facets'

= haml :cite_box

%script{:type => 'text/javascript', :src => '/javascripts/itemlist.js'}

= haml :"#{ENV['RA']}/footer"
