- if @datacenters[:meta]["members"].present?
  .panel.facets
    .panel-body
      %h4
        Members
      %ul
        - @datacenters[:meta]["members"].each do |f|
          - if params['member-id'] == f.fetch("id", nil)
            %li.active
              %a{:href => data_centers_query(params.except('member-id'))}
                %i.fa.fa-check-square-o
              .facet-title
                = f.fetch("title", nil)
              %span.number.pull-right= "#{number_with_delimiter(f.fetch("count", 0))}"
              .clearfix
          - else
            %li
              %a{:href => data_centers_query(params.merge('member-id' => f.fetch("id", nil)))}
                %i.fa.fa-square-o
              .facet-title
                = f.fetch("title", nil)
              %span.number.pull-right= "#{number_with_delimiter(f.fetch("count", 0))}"
              .clearfix
