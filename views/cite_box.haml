%script{:type => 'text/javascript', :src => '/javascripts/citebox.js'}
%script{:type => 'text/javascript', :src => 'https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/1.5.12/clipboard.min.js'}

.modal.fade#citation-modal
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %a.button.close#citation-modal-close &times;
        %h4#citation-modal-title
      .modal-body
        .nav-tabs-navigation
          .nav-tabs-wrapper
            %ul.nav.nav-tabs#cite-nav
              %li.active.citation-link#apa
                %a.cite-link{:href => '#'} APA
              %li.citation-link#harvard
                %a.cite-link{:href => '#'} Harvard
              %li.citation-link#mla
                %a.cite-link{:href => '#'} MLA
              %li.citation-link#vancouver
                %a.cite-link{:href => '#'} Vancouver
              %li.citation-link#chicago
                %a.cite-link{:href => '#'} Chicago
              %li.citation-link#ieee
                %a.cite-link{:href => '#'} IEEE
              %li.citation-link#bibtex
                %a.cite-link{:href => '#'} BibTeX
              %li.citation-link#ris
                %a.cite-link{:href => '#'} RIS

        #citation-text
        #spinner
        %br
        %button.btn{"data-clipboard-target" => "#citation-text"} Copy to Clipboard
