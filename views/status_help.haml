= partial :search_header, :page => page

:css
  span {
    color: #333;
  }
  
  .stat-value {
    font-size: 4em;
    line-height: 1.2em;
  }

  .stat-name {
    font-size: 2em;
    line-height: 2.5em;
    color: grey;
    font-family: "Bookman", "Times", serif;
  }

.row-fluid
  .span2
  .span8
    .page-header
      %h1 Indexing
    - page[:stats].each do |stat|
      .pull-right
        - if stat[:number]
          %span.stat-value.number= stat[:value]
        - else
          %span.stat-value= stat[:value]
      %span.stat-name= stat[:name]  
      %hr

.row-fluid
  .span2
  .span8
    .page-header
      %h1 Uptime
    %center  
      %a{:href => 'http://www.pingdom.com'}
        %img{:src => 'https://share.pingdom.com/banners/fcc2e6b4'}